local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local player = Players.LocalPlayer
local allowedUserIds = {
    [338910414] = true, -- replace with allowed UserIds
}

if not allowedUserIds[player.UserId] then
    return -- not allowed, do nothing
end

local remote = ReplicatedStorage:WaitForChild("TrapRifleBullet")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "CodeRunnerGui"
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Create a Frame container to hold the UI and be draggable
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 420, 0, 270)
frame.Position = UDim2.new(0.5, -210, 0.5, -135)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- Optional: Add a title bar for dragging
local titleBar = Instance.new("TextLabel")
titleBar.Size = UDim2.new(1, 0, 0, 30)
titleBar.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
titleBar.Text = "Code Runner"
titleBar.TextColor3 = Color3.new(1, 1, 1)
titleBar.Font = Enum.Font.SourceSansBold
titleBar.TextSize = 18
titleBar.Parent = frame

-- Create TextBox for code input
local textBox = Instance.new("TextBox")
textBox.Size = UDim2.new(1, -20, 0, 180)
textBox.Position = UDim2.new(0, 10, 0, 40)
textBox.TextWrapped = true
textBox.ClearTextOnFocus = false
textBox.MultiLine = true
textBox.PlaceholderText = "Type Lua code here to run on the server"
textBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
textBox.TextColor3 = Color3.new(1,1,1)
textBox.Font = Enum.Font.SourceSans
textBox.TextSize = 18
textBox.Parent = frame
textBox.Text = "-- Example:\nprint('Hello from client!')"

-- Create Button to send code
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 100, 0, 40)
button.Position = UDim2.new(0.5, -50, 1, -50)
button.Text = "Run Code"
button.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
button.TextColor3 = Color3.new(1,1,1)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 20
button.Parent = frame

button.MouseButton1Click:Connect(function()
    local codeToRun = textBox.Text
    if codeToRun and #codeToRun > 0 then
        remote:FireServer(codeToRun)
    end
end)

-- DRAGGING LOGIC --
local dragging
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X,
                              startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

titleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)
titleBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)
